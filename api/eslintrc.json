{
  "env": {
    "browser": "true",
    "es6": "true",
    "node": "true"
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": "true"
    }
  },

  "rules": {
    "indent": "off"
  },
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": 0
}
